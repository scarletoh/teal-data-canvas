                    {/* Progress Dots */}
                    <div className="flex justify-center space-x-2 mt-4">
                      {[1, 2, 3].map((step) => (
                        <div
                          key={step}
                          className={`w-2 h-2 rounded-full transition-all duration-300 ${
                            step === currentFeedbackStep
                              ? 'bg-[#DC143C] w-6 animate-pulse'
